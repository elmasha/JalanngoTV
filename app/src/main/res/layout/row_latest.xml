<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/blackgrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/r44"
            android:layout_width="match_parent"
            android:layout_height="180dp">

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/latest_view_category"
                android:text=" 0 "
                android:textStyle="bold"
                android:textSize="17dp"
                android:background="@drawable/bgcat"
                android:textColor="@color/orange"
                android:layout_height="wrap_content"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bglatest"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/latest_view_comment"
                        android:layout_width="wrap_content"
                        android:drawableLeft="@drawable/commentwhite"
                        android:text=" 0 "
                        android:textColor="@color/orange"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/latest_view_likes"
                        android:text=" 0 "
                        android:layout_marginStart="6dp"
                        android:textColor="@color/orange"
                        android:drawableLeft="@drawable/likeswhite"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/latest_view_views"
                        android:text=" 0 "
                        android:layout_marginStart="6dp"
                        android:textColor="@color/orange"
                        android:drawableLeft="@drawable/eye"
                        android:drawableTint="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />



                    <TextView
                        android:id="@+id/news_story"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="story"
                        android:visibility="gone"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/lightgray"
                        android:textSize="15dp"
                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/news_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Headlines"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />


            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_below="@id/r44"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">




            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/comment"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/likes"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0 "
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/new_date"
                    android:text="01/10/2021"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/news_cat"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:layout_marginStart="13dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" />

        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>