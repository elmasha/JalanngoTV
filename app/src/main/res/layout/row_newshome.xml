<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:gravity="center"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blackgrey"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/home_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgcat"
                android:text="Sport"
                android:textColor="@color/orange"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_headline"
                        android:layout_width="220dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="TextView"
                        android:background="@drawable/bglatest"
                        android:layout_marginTop="75dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/home_story"
                        android:layout_width="200dp"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:layout_marginTop="4dp"
                        android:minLines="2"
                        android:text="TextView"
                        android:textColor="@color/lightgray"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/news_date"
                        android:text="Read more"
                        android:textColor="@color/lightgray"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableTint="@color/lightgray"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/comment_counts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 0 "
                                android:layout_marginStart="10dp"
                                android:drawableLeft="@drawable/comment"
                                android:textColor="@color/orange"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp" />


                            <TextView
                                android:id="@+id/likes_count_news"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  0  "
                                android:layout_marginStart="20dp"
                                android:layout_gravity="center_horizontal"
                                android:drawableLeft="@drawable/likes"
                                android:textColor="@color/orange"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp" />


                            <TextView
                                android:id="@+id/views_count_news"
                                android:layout_width="wrap_content"
                                android:drawableLeft="@drawable/eye"
                                android:layout_height="wrap_content"
                                android:text="  0 "
                                android:layout_marginStart="20dp"
                                android:layout_gravity="end"
                                android:textColor="@color/orange"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>






</androidx.cardview.widget.CardView>