<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blackgrey"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_top"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_image"
                android:layout_width="100dp"
                android:layout_height="100dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_below="@id/search_image"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/search_headline"
                    android:layout_width="270dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/search_story"
                    android:layout_width="250dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:minLines="3"
                    android:text="TextView"
                    android:textColor="@color/lightgray"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/layout_top"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/search_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 "
                    android:drawableLeft="@drawable/comment"
                    android:textColor="@color/orange"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/search_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 "
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/likes"
                    android:textColor="@color/orange"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/search_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0 "
                android:drawableLeft="@drawable/eye"
                android:textColor="@color/orange"
                android:layout_marginStart="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="15dp" />



            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/search_date"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_gravity=""
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" />


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/news_date"
                android:text="Read more"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="30dp"
                android:drawableRight="@drawable/ic_arrow"
                android:drawableTint="@color/white"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" />
        </LinearLayout>


    </RelativeLayout>




</androidx.cardview.widget.CardView>